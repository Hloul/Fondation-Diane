<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <template id="areeba_form">
            <div>
                <input type="hidden" name="session_id" t-att-value="session_id"/>
                <input type="hidden" name="merchant_id" t-att-value="merchant_id"/>
                <input type="hidden" name="amount" t-att-value="amount"/>
                <input type="hidden" name="currency" t-att-value="currency"/>
                <input type="hidden" name="reference" t-att-value="reference"/>
                <input type="hidden" name="merchant_name" t-att-value="merchant_name"/>
                <input type="hidden" name="merchant_street" t-att-value="merchant_street"/>
                <input type="hidden" name="merchant_street2" t-att-value="merchant_street2"/>
                <input type="hidden" name="logo" t-att-value="logo"/>
                <script>
                    odoo.define(function (require) {
                        const ajax = require('web.ajax');
                        ajax.loadJS("/payment_areeba/static/src/js/areeba.js");
                    });
                </script>
            </div>
        </template>

        <template id="assets_frontend" inherit_id="web.assets_frontend" name="Payment AreebaAssets">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/payment_areeba/static/src/js/payment_form.js"></script>
            </xpath>
        </template>
    </data>
</odoo>
