<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_areeba" model="ir.ui.view">
        <field name="name">acquirer.form.areeba</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="provider"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'areeba')]}">
                    <field name="areeba_merchant_id"/>
                    <field name="areeba_api_password"/>
                    <field name="areeba_payment_logo" widget="image"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
